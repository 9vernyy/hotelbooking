<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_viewinfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#fff"
            android:visibility="visible"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <ImageView
                    android:id="@+id/wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:src="@drawable/wifi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/amen"
                    android:paddingLeft="10dp"
                    android:text="Free WIFI"
                    android:textColor="#17b61a"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/short_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:text="Luxury hotel with 3 restaurants, near Trafalgar Square"
                    android:textColor="#000" />

                <ImageView
                    android:id="@+id/amen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/short_desc"
                    android:paddingLeft="16dp"
                    android:src="@drawable/amen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/short_desc"
                    android:layout_toRightOf="@+id/amen"
                    android:paddingLeft="10dp"
                    android:text="Main amenities"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amenities"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/short_desc"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:text="
294 smoke-free guestrooms\n3 restaurants and 4 bars/lounges\nFull-service spa\nIndoor pool\nBreakfast available\n24-hour fitness center\nValet parking\n24-hour business center\nLimo/town car service\nChildcare\n24-hour front desk\nAir conditioning"
                    android:textColor="#000" />

                <ImageView
                    android:id="@+id/around_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/amenities"
                    android:paddingLeft="16dp"
                    android:src="@drawable/around" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/amenities"
                    android:layout_toRightOf="@+id/around_image"
                    android:paddingLeft="10dp"
                    android:text="Whatâ€™s around"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/around"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/amenities"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:text="
In West End
Trafalgar Square (0.3 mi / 0.4 km)
Big Ben (0.5 mi / 0.8 km)
London Eye (0.5 mi / 0.8 km)
King's College London (0.6 mi / 1 km)
Nelson's Column (0.2 mi / 0.3 km)"
                    android:textColor="#000" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
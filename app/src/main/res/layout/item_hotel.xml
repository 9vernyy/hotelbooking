<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/card_view"

    android:layout_width="match_parent"

    android:layout_height="wrap_content"

    android:layout_margin="5dp"

    android:background="#fff"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_hotel"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/hotel" />

        <TextView
            android:id="@+id/title_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_hotel"
            android:paddingLeft="16dp"
            android:text="Men'k Kings"
            android:textColor="#000"
            android:textSize="24sp" />

        <RatingBar
            android:id="@+id/rating_hotel"
            style="@style/HotelRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/image_hotel"
            android:numStars="5"
            android:layout_marginRight="16dp"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/address_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_hotel"
            android:layout_toRightOf="@+id/image_address"
            android:text="Spain"
            android:textColor="#2c2c2c"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/image_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_hotel"
            android:layout_marginLeft="16dp"
            android:src="@drawable/address" />

        <TextView
            android:id="@+id/price_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/title_hotel"
            android:paddingRight="16dp"
            android:text="3000 руб."
            android:textColor="#2c2c2c"
            android:textSize="12sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
